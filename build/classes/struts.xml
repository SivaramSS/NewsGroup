<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="user" namespace="/" extends="struts-default">
	    
    	<action name="Login" class="org.sivaram.newsgroup.action.LoginAction">
             <result name="success" type="redirect">/Smartfeed.jsp</result>
             <result name="login">/Login.jsp</result>
             <result name="input">/Login.jsp</result>
         </action>
         
         <action name="Signup" class="org.sivaram.newsgroup.action.SignupAction" method="createAccount">
             <result name="success" type="redirect">/newuser.jsp</result>
             <result name="input">/Login.jsp</result>
         </action>
         
         <action name="Profile" class="org.sivaram.newsgroup.action.ProfileAction" method="getProfile">
     	 	 <result name="success">/Profile.jsp</result>
     	</action>  	
     	
     	<action name="Share" class="org.sivaram.newsgroup.action.ShareAction" method="shareArticle">
     		 <result name="generated" type="redirect">/Smartfeed.jsp</result>
     	</action>
     	
     	<action name="Logout" class="org.sivaram.newsgroup.action.LoginAction" method="logout">
     		<result name="success">/Login.jsp</result>
     		<result name="feed">/Smartfeed.jsp</result>
     		<result name="input">/Login.jsp</result>
     	</action>
     	
     	<action name="LikeUnlike" class="org.sivaram.newsgroup.action.LikeAction" method="setLiked">
     		<result type="stream" name="success">
     			<param name="root">inputStream</param>
     		</result>
     	</action>
     	
     	<action name="GetLikesCount" class="org.sivaram.newsgroup.action.LikeAction" method="getLikesCount">
     		<result type="stream" name="success">
     			<param name="root">inputStream</param>
     		</result>
     	</action>
     	
     	<action name="ViewPost" class="org.sivaram.newsgroup.action.ViewPostAction" method="viewPost">
     		<result name="show">/Post.jsp</result>
     	</action>
    </package>

	<package name="comment" namespace="/" extends="json-default">

		<action name="Comments" class="org.sivaram.newsgroup.action.CommentsAction" method="getComments">
     		<result type="json">
     			<param name="root">commentlist</param>
     		</result>
     	</action>
     	
     	<action name="InsertComment" class="org.sivaram.newsgroup.action.CommentsAction" method="insertComment">
     		<result type="stream" name="done">
				<param name="root">inputStream</param>     		
     		</result>
     	</action>
     	
     	<action name="GetCommentsCount" class="org.sivaram.newsgroup.action.CommentsAction" method="getCommentsCount">
     		<result type="stream" name="done">
     			<param name="root">inputStream</param>
     		</result>
     	</action>
	</package>
	
    <package name="default" namespace="/" extends="struts-default">
		
		<action name="Feed" class="org.sivaram.newsgroup.action.GenerateFeed" method="getFeed">
    	     <result name="generated">/Snippet.jsp</result>
    	     <!-- <result name="generated" type="json">
    	     	<param name="root">articlelist</param>
    	     </result> -->
    	     <result name="login" type="dispatcher">/Login.jsp</result>
    	</action>
    	
    	<action name="SmartFeed" class="" method="">
    	     <result>/Smartfeed.jsp</result>
    	</action>
    	
	</package>
    
 </struts>