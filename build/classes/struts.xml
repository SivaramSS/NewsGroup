<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <package name="default" namespace="/" extends="struts-default">
    
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
		 </result-types>
		
		<action name="Feed" class="com.sharepoint.model.GenerateFeed" method="getFeed">
    	     <result name="generated">/WEB-INF/Snippet.jsp</result>
    	     <result name="login" type="dispatcher">/WEB-INF/Login.jsp</result>
    	</action>
    	
    	<action name="SmartFeed" class="com.sharepoint.model.SessionAction" method="execute">
    		 <result type="tiles" name="login">login</result>
    		 <result type="tiles" name="feed">feeddef</result>
    	</action>
    	
	</package>
	
    <include file="struts-user.xml"></include>
    <include file="struts-comment.xml"></include>
    <include file="struts-mobile.xml"/>
    
 </struts>